        
{% comment %} 

  -----------------------------------------------------------------------------
  Content Object
  -----------------------------------------------------------------------------

  Usage:

  {% render 'content-object',
              id: { string } - required only if using background image
              block_bg_image_url: { string } - optional
              block_bg_image_url_large: { string } - optional
              text_alignment: { string } - optional
              cta_type_1: { string } - optional
              cta_url_1: { string } - optional
              cta_text_1: { string } - optional
              cta_type_2: { string } - optional
              cta_url_2: { string } - optional
              cta_text_2: { string } - optional              
              cta_type_3: { string } - optional
              cta_url_3: { string } - optional
              cta_text_4: { string } - optional
              cta_type_4: { string } - optional
              cta_url_4: { string } - optional
              cta_text_4: { string } - optional                            
  %}

{% endcomment %}

{% comment %} Content Settings {% endcomment %}
{% if id != blank %}
  {% assign id = id %}
{% else %}
  {% assign id = false %}
{% endif %}

{% if bg_image_url != blank %}
  {% if bg_image_url contains 'no-image' %}
    {% assign bg_image_url = false %}
  {% else %}
    {% assign bg_image_url = bg_image_url %}
  {% endif %}
{% else %}
  {% assign bg_image_url = false %}
{% endif %}

{% if bg_image_url_large != blank %}
  {% if bg_image_url_large contains 'no-image' %}
    {% assign bg_image_url_large = false %}
  {% else %}
    {% assign bg_image_url_large = bg_image_url_large %}
  {% endif %}
{% else %}
  {% assign bg_image_url_large = false %}
{% endif %}

{% if text_alignment != blank %}
  {% assign text_alignment = text_alignment %}
{% else %}
  {% assign text_alignment = 'text-center' %}
{% endif %}

{% if text_alignment_large != blank %}
  {% assign text_alignment_large = text_alignment_large %}
{% else %} 
  {% assign text_alignment_large = 'text-md-center' %}
{% endif %}

{% assign text_alignment_classes = text_alignment | append: ' ' | append: text_alignment_large %}

{% comment %} Object Classes {% endcomment %}
{% assign block_classes = block_classes %}
{% if bg_image_url %}
  {% assign block_classes = block_classes | append: ' h-100' %}
{% endif %}

{% comment %} Render {% endcomment %}
{% if eyebrow_text != blank %}
  {% assign render_content = true %}
{% elsif display_text != blank %}
  {% assign render_content = true %}
{% elsif paragraph_text != blank %}
  {% assign render_content = true %}  
{% elsif cta_url_1 != blank %}
  {% assign render_content = true %}   
{% elsif cta_url_2 != blank %}
  {% assign render_content = true %}     
{% else %}
  {% assign render_content = false %}
{% endif %}

{% if render_content == true %}
  {% comment %} TODO: This is still rendering all 0 value classes {% endcomment %}  
  <div class="{{ block_classes }}" {% if id != blank %}id="content-object-{{ id }}{% endif %}">

    {% comment %} Background Image {% endcomment %}
    {% if bg_image_url %}
      <style>
        #content-object-{{ id }} { background-image: url({{ bg_image_url }}); background-size: cover; }
      </style>
    {% elsif bg_image_url_large %}
      <style>
        #content-object-{{ id }} { background-image: url({{ bg_image_url_large }}); background-size: cover; }
      </style>
    {% endif %}

    {% if bg_image_url_large %}
      <style>
        @media (min-width: 992px) {
          #content-object-{{ id }} { background-image: url({{ bg_image_url_large }}); background-size: cover; }
        }
      </style>
    {% elsif bg_image_url %}  
      <style>
        @media (min-width: 992px) {
          #content-object-{{ id }} { background-image: url({{ bg_image_url }}); background-size: cover; }
        }
      </style>
    {% endif %}  
  
    {% render 'eyebrow-text', 
              text: eyebrow_text,
              text_alignment: text_alignment_classes,
              badge_style: badge_style,
    %} 
    {% render 'display-text',
              text: display_text,
              text_color: content_color,
              text_alignment: text_alignment_classes,
              display_size: display_style
    %}

    {% render 'paragraph-text',
              text: paragraph_text,
              text_color: content_color,
              text_alignment: text_alignment_classes
    %}
    {% render 'cta-block',
                text_alignment: text_alignment_classes,
                cta_text_1: cta_text_1,
                cta_url_1: cta_url_1,
                cta_type_1: cta_type_1,
                cta_text_2: cta_text_2,
                cta_url_2: cta_url_2,
                cta_type_2: cta_type_2,
    %}
  {% if block_classes != blank %}
    </div>
  {% endif %}
{% endif %}


{% comment %}

  -----------------------------------------------------------------------------
  Paragraph Element
  -----------------------------------------------------------------------------

  Usage:

  {% render 'paragraph-element',
    text: { string } - expects richtext
    text_color: { string } expects text-color class
    text_align: { string } 'center', 'left' 
    text_align_md_up: { string } 'center', 'left' %}

{% endcomment %}

{% comment %} Defaults {% endcomment %}
{% assign classes = blank %}

{% if text_color != blank %}
  {% assign classes = classes
    | append: settings.ec_prefix
    | append: 'text-'
    | append: text_color %}
{% else %}
  {% assign classes = classes
    | append: settings.ec_prefix
    | append: 'text-primary' %}
{% endif %}

{% if text_align != blank %}
  {% assign text_align = settings.ec_prefix
    | append: 'text-'
    | append: text_align %}
{% else %}
  {% assign text_align =  settings.ec_prefix | append: 'text-left' %}
{% endif %}

{% if text_align_md_up != blank %}
  {% assign text_align_md_up = settings.ec_prefix
    | append: 'text-md-'
    | append: text_align_md_up %}
{% else %}
  {% assign text_align_md_up = settings.ec_prefix | append: 'text-md-center' %}
{% endif %}

{% assign text_align_classes = text_align
  | append: ' '
  | append: text_align_md_up %}

{% if text_align_classes != blank %}
  {% assign classes = classes | append: ' ' | append: text_align_classes %}
{% else %}
  {% assign classes = classes
    | append: ' '
    | append: settings.ec_prefix
    | append: 'text-left' %}
{% endif %}

{% comment %} Content {% endcomment %}
{% capture 'html_content' %}
  {% if text != blank %}
    <div class="{{ classes }}">{{ text }}</div>
  {% endif %}
{% endcapture %}

{% comment %} Render {% endcomment %}
{% if html_content != blank %}
  {{ html_content }}
{% endif %}
{% comment %}

  -----------------------------------------------------------------------------
  Eyebrow Text
  -----------------------------------------------------------------------------

  Usage:

  {% render 'eyebrow-element',
    text: { string }
    eyebrow_style: { string } expects bootstrap badge class
    text_align: { string } - default 'text-left'
    (i.e. badge-secondary) %}

{% endcomment %}

{% comment %} Snippet Settings {% endcomment %}
{% if text_align != blank %}
  {% assign text_align =  text_align %}
{% else %}
  {% assign text_align = 'text-left' %}
{% endif %}

{% if eyebrow_style != blank %}
  {% assign eyebrow_style = 'badge-' | append: eyebrow_style %}
{% else %}
  {% assign eyebrow_style = 'badge-secondary' %}
{% endif %}

{% assign classes = 'mb-1' %}
{% assign classes = classes | append: ' ' | append: text_align %}

{% comment %} Badge Element Classes {% endcomment %}
{% assign badge_classes = 'badge'%}
{% assign badge_classes = badge_classes
  | append: ' '
  | append: eyebrow_style %}

{% comment %} HTML content {% endcomment %}
{% capture 'html_content' %}
  {% if text != blank %}
  <div class="{{ classes }}">
    <span class="{{ badge_classes }}">{{ text }}</span>
  </div>
  {% endif %}
{% endcapture %}

{% comment %} Render {% endcomment %}
{% if html_content != blank %}
  {{ html_content }}
{% endif %}

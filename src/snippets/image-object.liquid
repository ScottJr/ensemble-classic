{% comment %}

  -----------------------------------------------------------------------------
  Image Object
  -----------------------------------------------------------------------------

  Usage:

  {% render 'image-object',
    image_url: { string } - expects image url
    image_url_lg: { string } - expects image url
    image_alt_text: { string }
    aspect_ratio: { string } - utility class %}

{% endcomment %}
{% if object_fit != blank %}
  {% assign object_fit = object_fit %}
{% else %}
  {% assign object_fit = 'cover' %}
{% endif %}

{% if image_url contains 'no-image' %}
  {% assign image_url = false %}
{% endif %}

{% if image_url_lg contains 'no-image' %}
  {% assign image_url_lg = false %}
{% endif %}

{% capture content %}
  <picture class="w-100 h-100">
    <source
      srcset="{{ image_url_lg }} 200w,
              {{ image_url }} 100w"
      sizes="(max-width: 768px) 800px,
      1120px"
    />
    <img
      src="{{ 'password-holder.jpg' | asset_url }}"
      alt="{{ image_alt_text }}"
      style="object-fit: {{ object_fit }}; height:100%; width:100%;"
      loading="lazy"
    />
  </picture>
{% endcapture %}

{% comment %} Render Image Object {% endcomment %}
{% if image_url %}
  {% render 'embed-object'
    content: content,
    aspect_ratio: aspect_ratio %}
{% endif %}


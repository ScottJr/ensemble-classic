{% comment %}

  -----------------------------------------------------------------------------
  Image Object
  -----------------------------------------------------------------------------

  Usage:

  {% render 'image-object',
    image_url: { string } - expects image url
    image_url_lg: { string } - expects image url
    image_alt_text: { string }
    aspect_ratio: { string } - utility class %}

{% endcomment %}

{% if image_url contains 'no-image' %}
  {% assign image_url = false %}
{% endif %}

{% if image_url_lg contains 'no-image' %}
  {% assign image_url_lg = false %}
{% endif %}

{% capture content %}
  <picture class="w-100">
    <source
      srcset="{{ image_url_lg }} 1170w,
              {{ image_url }} 970w"
      sizes="100vw"
    />
    <img
      src="{{ 'password-holder.jpg' | asset_url }}"
      alt="{{ image_alt_text }}"
      style="object-fit: {{ cover_style }}; height:100%; width:100%;"
      loading="lazy"
    />
  </picture>
{% endcapture %}

{% comment %} Render Image Object {% endcomment %}
{% if image_url %}
  {% render 'embed-object' content: content, aspect_ratio: aspect_ratio %}
{% endif %}


  Liquid:
  - Content Object - `snippets/content-object.liquid`
  - Grid Item - `snippets/grid-item.liquid`

  Styling:

  - `ec-base-styles.scss.liquid`

  JavaScript:

  - None

{% endcomment %}

{% comment %} Defaults {% endcomment %}

{% comment %} Content {% endcomment %}
{% capture content %}
  {% capture content_object %}
    {% render 'lightly-content-object'
      content_color: content_color,
      eyebrow_style: eyebrow_style,
      eyebrow_text: eyebrow_text,
      heading_style: heading_style,
      heading_text: heading_text,
      paragraph_text: paragraph_text,
      link_text: link_text,
      link_url: link_url,
      link_style: link_style,
      link_size: link_size,
      link_block: link_block,
      content_align: content_align,
      content_align_md_up: content_align_md_up %}
  {% endcapture %}

  {% render 'lightly-content-wrapper'
    content: content_object,
    bg_color: bg_color,
    bg_color_alpha: bg_color_alpha,
    pt: pt,
    pb: pb,
    mt: mt,
    mb: mb,
    pt_md_up: pt_md_up,
    pb_md_up: pb_md_up,
    mt_md_up: mt_md_up,
    mb_md_up: mb_md_up %}
{% endcapture %}

{% comment %} Layout {% endcomment %}
{% if content != blank %}
  {% capture grid_item %}
    {% render 'lightly-grid-item'
      col: col,
      col_offset: col_offset,
      col_md_up: col_md_up,
      col_md_up_offset: col_offset_md_up,
      content: content %}
  {% endcapture %}
{% endif %}

{% comment %} Render {% endcomment %}
{% if grid_item != blank %}
  {% render 'lightly-content-container'
    container: container,
    content: grid_item %}
{% endif %}

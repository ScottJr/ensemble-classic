{% comment %}

  -----------------------------------------------------------------------------
  Heading Element
  -----------------------------------------------------------------------------

  Usage:

  {% render 'heading-element',
    text_color: { string } 'primary', 'secondary' %}
    text_align: { string } 'center', 'left'
    text_align_md_up: { string } 'center', 'left'
    text: { string }
    heading_size: { string } - h1, h2, h3, h4, h5, h6
    heading_style: { string } expects display-1,2,3,4

{% endcomment %}

{% comment %} Class defaults {% endcomment %}
{% assign classes = blank %}

{% if text_color != blank %}
  {% assign classes = classes
    | append: settings.ec_prefix
    | append: 'text-'
    | append: text_color %}
{% else %}
  {% assign classes = classes | append: 'text-primary' %}
{% endif %}

{% if text_align != blank %}
  {% assign classes = classes
    | append: ' '
    | append: settings.ec_prefix
    | append: 'text-'
    | append: text_align %}
{% else %}
  {% assign classes = classes
    | append: ' '
    | append: settings.ec_prefix
    | append: 'text-left' %}
{% endif %}

{% if text_align_md_up != blank %}
  {% assign classes = classes
    | append: ' '
    | append: settings.ec_prefix
    | append: 'text-md-'
    | append: text_align_md_up %}
{% else %}
  {% assign classes = classes
    | append: ' '
    | append: settings.ec_prefix
    | append: 'text-md-left' %}
{% endif %}

{% if heading_style != blank %}
  {% assign classes = classes
    | append: ' '
    | append: settings.ec_prefix
    | append: heading_style %}
{% else %}
  {% assign classes = classes
    | append: ' '
    | append: settings.ec_prefix
    | append: 'display-2' %}
{% endif %}

{% if heading_size != blank %}
  {% assign heading_size = heading_size %}
{% else %}
  {% assign heading_size = 'h2' %}
{% endif %}

{% comment %} HTML content {% endcomment %}
{% capture 'html_content' %}
  {% if text != blank %}
    <{{ heading_size }} class="{{ classes }}">{{ text }}</{{ heading_size }}>
  {% endif %}
{% endcapture %}

{% comment %} Render {% endcomment %}
{% if html_content != blank %}
  {{ html_content }}
{% endif %}
{% comment %} 

  -----------------------------------------------------------------------------
  Media Object
  -----------------------------------------------------------------------------

  Renders video or image media content

  Usage:

  {% render 'media-object',
              media_type: { string } - required
              video_url: { obj } - expects video object from theme settings
              video_aspect_ratio: { string } - i.e. 1by1
              image_url: { string } - expects url
              image_url_lg: { string } - expects url
              image_aspect_ratio: { string } - utility class
              image_alt_text: { string }
              responsive_item_bg_color: { string } - expects utility class
  %}

{% endcomment %}

{% if media_type == 'video' %}
  {% render 'video-object',
              video_url: video_url
              video_aspect_ratio: video_aspect_ratio
  %}
{% elsif media_type == 'image' %}
  {% render 'image-object',
              image_url: image_url
              image_url_lg: image_url_lg
              image_aspect_ratio: image_aspect_ratio
              image_alt_text: image_alt_text
              responsive_item_bg_color: responsive_item_bg_color
  %}
{% endif %}
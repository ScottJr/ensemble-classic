        "info":      "Default: Center"
      },
      {
        "type": "select",
        "id": "header_container_text_alignment",
        "label": "Text alignment - Small devices",
        "options": [
          { "value": "text-left", "label": "Left"},
          { "value": "text-center", "label": "Center"},
          { "value": "text-right", "label": "Right"}
        ],
        "default":   "text-center",
        "info":      "Default: Center"
      }, 
      {
        "type": "select",
